{
    "name": "resolut-learning-assistant",
    "version": "1.0.0",
    "type": "commonjs",
    "scripts": {
        "frontend:dev": "npm run dev --prefix frontend",
        "frontend:build": "npm run build --prefix frontend",
        "backend:run": "cd backend && python main.py",
        "desktop:dev": "python desktop/run_app.py",
        "start": "concurrently \"npm run frontend:dev\" \"npm run desktop:dev\""
    },
    "devDependencies": {
        "concurrently": "^9.1.0"
    }
}